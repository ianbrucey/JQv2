# Legal Document Management System Environment Configuration

# Database Configuration (Laravel Herd PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=openhands_legal
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# Legal Workspace Configuration
LEGAL_WORKSPACE_ROOT=/tmp/legal_workspace
DRAFT_SYSTEM_PATH=/tmp/draft_system

# Redis Configuration (Laravel Herd)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenHands Configuration
WORKSPACE_BASE=/tmp/legal_workspace
DEFAULT_WORKSPACE_MOUNT_PATH_IN_SANDBOX=/workspace

# File Storage Configuration
FILE_STORE=local
FILE_STORE_PATH=/tmp/legal_workspace/files

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
AUTH_API_URL=https://your-auth-api.com

# Auto-save Configuration
AUTO_SAVE_INTERVAL=30

# S3/Minio Configuration (Optional - for backups)
S3_BUCKET=legal-document-backups
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Logging Configuration
LOG_LEVEL=INFO
DEBUG_RUNTIME=false

# Docker Configuration
SANDBOX_VOLUMES=/app/legal_workspace:/workspace:rw,/app/draft_system:/app/draft_system:ro
